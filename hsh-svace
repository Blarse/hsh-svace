show_help()
{
    cat <<EOF
Usage: $PROG [options] [<path-to-workdir>] <package>
  or:  $PROG [options] --workdir=DIR <package>

Options:
    --workdir=DIR              path to workdir to use (default $HOME/hasher);
    --build-only               skip svace analysis, just build;
    -r, --rebuild              use existing hasher;
    -q, --quiet                try to be more quiet;
    -h, --help                 show this text and exit.

EOF
}

show_usage()
{
    [ -z "${1:-}" ] || echo "$1" >&2
    show_help >&2
    exit 1
}

PROG=hsh-svace
TEMP=$(getopt -n $PROG -o "r,h,q" -l "rebuild,build-only,workdir:,help,quiet" -- "$@") \
    || show_usage
eval set -- "$TEMP"

selfdir="$(dirname $(realpath $0))"
verbose=-v
quiet=
analyze=1
rebuild=
workdir_from_opt=
workdir=$HOME/hasher

while :; do
    case "$1" in
        --) shift; break
            ;;
        --workdir) shift; workdir="$1"
                   workdir_from_opt=1
                   ;;
        -q|--quiet) verbose=
                    quiet=-q
                    ;;
        -r|--rebuild) rebuild=1
                      ;;
        --build-only) analyze=
                      ;;
        --apt-config) shift; apt_config="$1"
                      ;;
        -h|--help)
            show_help
            exit 0
            ;;
        *) show_usage "Unrecognized option: $1"
           ;;
    esac
    shift
done

if [ -z "$workdir_from_opt" ]; then
    if [ -d "${1-}" ]; then
        # At least one argument.
        [ "$#" -ge 1 ] || show_usage 'Insufficient arguments.'
        workdir="$1"
        shift
    fi
fi

[ "$#" -ge 1 ] || show_usage 'Insufficient arguments.'
pkgtar="$1"

# init hasher
[ -n "${rebuild:-}" ] ||
    hsh $verbose \
    --initroot-only \
    --without-stuff \
    ${apt_config:+--apt-config "$apt_config"} \
    --workdir "$workdir"

# install deps
hsh-rebuild $verbose \
     --install-only \
     --workdir "$workdir" \
     "$pkgtar"

# run build
hsh-run $verbose \
        --mountpoints=/proc,/opt,/dev/pts,/dev/shm,/dev/kvm \
        --execute="$selfdir/hsh-svace-build.sh" \
        "$workdir" -- $quiet

# run analyze
if [ -n "${analyze:-}" ]; then
    hsh-run $verbose --rooter --workdir "$workdir" -- sh -c 'mkdir -p /var/hasplm'
    share_network=1 hsh-run $verbose \
                    --mountpoints=/proc,/opt,/dev/pts,/dev/shm,/dev/kvm,/var/hasplm \
                    --execute="$selfdir/hsh-svace-analyze.sh" \
                    "$workdir" -- $quiet
fi
